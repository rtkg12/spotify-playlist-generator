<!--Search Box-->
<div class="container searchBarWrapper">
  <form class="form-group">
    <input type="text" class="form-control" id="searchBar" placeholder="Search playlists">
  </form>
</div>

<!--Cards-->
<div class="container">
  <div class="row mt-5">
    <% playlists.forEach((playlist)=>{ %>
    <div class="col-sm-6 col-lg-4">
      <div class="card m-2">
        <img src="<%=playlist.image%>" class="img-fluid rounded-circle cardImage">
        <h5 class="card-title"> <%= playlist.name %> </h5>
        <a href="#" class="stretched-link"></a>
      </div>
    </div>
    <% }); %>
  </div>

