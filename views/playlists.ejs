<!-- Search Box-->
<div class="container searchBarWrapper">
  <form class="form-group">
    <h5>Search playlists:</h5>
  </form>
  <input type="text" class="form-control search-bar searchbar" id="searchBar" placeholder="Enter name....">
  </form>
</div>

<!--Cards-->
<div class="container d-flex align-items-center">
  <div class="row d-flex justify-content-around">
    <% playlists.forEach((playlist)=>{ %>
    <div class="playlist-holder col-5 col-md-3 col-lg-2 text-center mb-4">
      <div class="playlist-info p-0">
        <div class="playlist-art d-flex justify-content-center align-items-center">
          <img src="<%=playlist.image%>" class="picture playlist-picture">
        </div>
        <div class="playlist-name d-flex justify-content-around">
          <h5 class="playlist-title d-flex align-items-center p-2"><%= playlist.name %></h5>
        </div>
        <a href="#" class="stretched-link"></a>
      </div>
    </div>
    <% }); %>
  </div>
</div>

